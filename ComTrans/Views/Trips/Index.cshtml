@model IEnumerable<ComTrans.Models.Trip>

@{
    ViewBag.Title = "Рейсы";
}

<h2>Рейсы</h2>

<p>
    @Html.ActionLink("Создать рейс", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Route)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Driver.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Route)
        </td>
        <td>
            @(item.Date.HasValue ? item.Date.Value.ToShortDateString() : "")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Driver.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Оптимизировать маршрут", "Optimize", new { id = item.Id })
        </td>
    </tr>
}

</table>
